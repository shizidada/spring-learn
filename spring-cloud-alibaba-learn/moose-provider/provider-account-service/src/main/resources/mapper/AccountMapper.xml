<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.moose.account.mapper.AccountMapper">

  <resultMap id="BaseResultMap" type="org.moose.account.model.domain.AccountDO">
    <id column="id" property="accountId" jdbcType="BIGINT"/>
    <result column="account_name" property="accountName" jdbcType="VARCHAR"/>
    <result column="nick_name" property="nickName" jdbcType="BIGINT"/>
    <result column="phone" property="phone" jdbcType="VARCHAR"/>
    <result column="status" property="status" jdbcType="INTEGER"/>
    <result column="icon" property="icon" jdbcType="VARCHAR"/>
    <result column="gender" property="gender" jdbcType="INTEGER"/>
    <result column="birthday" property="birthday" jdbcType="DATE"/>
    <result column="source_type" property="sourceType" jdbcType="INTEGER"/>
    <result column="create_time" property="createTime" jdbcType="DATE"/>
    <result column="update_time" property="updateTime" jdbcType="DATE"/>
  </resultMap>

  <sql id="Base_Column">
    id, account_name, nick_name, phone, status, icon, gender, birthday, source_type, create_time, update_time
  </sql>

  <insert id="insert" useGeneratedKeys="true">
      INSERT INTO
        t_account(id, account_name, nick_name, phone, status, icon, gender, birthday, source_type, create_time, update_time)
      VALUES (#{accountId}, #{accountName}, #{nickName}, #{phone}, #{status}, #{icon}, #{gender}, #{birthday}, #{sourceType}, #{createTime}, #{updateTime})
  </insert>


  <select id="findAccountById" resultMap="BaseResultMap" parameterType="string">
    SELECT
    <include refid="Base_Column"/>
    FROM
    t_account WHERE id=#{accountId}
  </select>
</mapper>
